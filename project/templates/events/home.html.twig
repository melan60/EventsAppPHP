{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1 class="text-center">Événements</h1>
    <div class="row">
        {% for event in events %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title">{{ event.title }}</h5>
                        {% if event.remainingPlaces > 0 %}
                            <span class="badge badge-info ml-2 p-1">Places restantes : {{ event.remainingPlaces }}</span>
                        {% else %}
                            <span class="badge badge-danger p-1">Complet</span>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <p class="card-text"><small class="text-muted">{{ event.date|date('Y-m-d H:i') }}</small></p>
                        <p class="card-text">Participants : {{event.getReservedPlaces}} / {{ event.participantsNumber }}</p>
                        <p class="card-text">Prix : {{ event.price }}€</p>
                        <p class="card-text">Public : {{ event.public ? 'Oui' : 'Non' }}</p>
                        <a href="{{ path('event_show', { id: event.id }) }}" class="btn btn-primary">Détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
